package chapter05;

import java.io.IOException;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
@WebServlet("/5_1")
public class exam05_1 extends HttpServlet{

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String examNum = (String)req.getParameter("examn");
		System.out.println(examNum);
		//문제로 왔을때.
		if(examNum.equals("5-1")) {
			RequestDispatcher ds = req.getRequestDispatcher("chapter05/exam5_1_1.jsp");
			ds.forward(req, resp);
		}else {
			String id = (String)req.getAttribute("id");
			String pwd = (String)req.getAttribute("passwd");
			
			req.setAttribute("id", id);
			req.setAttribute("name", pwd);
			RequestDispatcher ds = req.getRequestDispatcher("chapter05/exam5_1_2.jsp");
			ds.forward(req, resp);
		}
	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
	}

}
